@import url(http://fonts.googleapis.com/css?family=Trade+Winds);

$white: #ffffff;
$body-bg: #ecf0f1;
$cream: #fef9e7;
$navy: #2c3e50;
$navbar-inverse-bg: $navy;
$navbar-inverse-link-color: $cream;
$display-font-family: 'Trade Winds', cursive;
$btn-default-bg: $cream;
$btn-default-color: $navy;
$panel-header-bgColor: $white;


@mixin logo-bg {
	background-image: url( <%= asset_path 'stream.svg' %> );
	background-color: rgba(53,148,220,.2);
	background-position: center;
	background-repeat: no-repeat;
}

@import 'bootstrap';

.jumbotron {
	@include logo-bg;	
 	p {color: $navy; font-weight: 400;}
	h1 {
		color: $navy;
		font-family: $display-font-family; 
	} 
}
.center {text-align: center;}
.navbar-brand {
	font-family: $display-font-family;
}
.panel-header, .show {
	background-color: $white;
	border-bottom: 0px;	
}
.panel .show {
	padding-top: 45px;
}
.just {text-align: justify;}

/*******sticky footer********/
html,
body {
  height: 100%;
  /* The html and body elements cannot have any padding or margin. */
}

/* Wrapper for page content to push down footer */
#wrap {
  min-height: 100%;
  height: auto;
  /* Negative indent footer by its height */
  margin: 0 auto -60px;
  /* Pad bottom by footer height */
  padding: 0 0 60px;
}

/* Set the fixed height of the footer here */
#footer {
  height: 60px;
  background-color: $body-bg;
  p {
  text-align: center;
  padding-top: 10px;
	}
}

